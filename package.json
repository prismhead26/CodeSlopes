{
  "name": "codeslopes",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "rm -rf .next && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "clean": "rm -rf .next",
    "setup": "npm install && echo '\n✅ Dependencies installed!\n\n⚠️  Next steps:\n1. Copy .env.example to .env\n2. Add your Firebase credentials to .env\n3. Run npm run dev\n'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "firebase:emulators": "npx firebase emulators:start",
    "firebase:deploy": "npx firebase deploy",
    "firebase:deploy:rules": "npx firebase deploy --only firestore:rules",
    "deploy:preview": "firebase hosting:channel:deploy preview",
    "deploy:production": "firebase deploy --only hosting",
    "seed:tutorials": "npx ts-node --project tsconfig.seed.json scripts/seed-tutorials.ts",
    "seed:categories": "npx ts-node --project tsconfig.seed.json scripts/seed-categories.ts",
    "seed:recalculate": "npx ts-node --project tsconfig.seed.json scripts/recalculate-counts.ts",
    "seed:blog-tutorials": "npx ts-node --project tsconfig.seed.json scripts/seed-blog-tutorials.ts",
    "seed:all": "npm run seed:categories && npm run seed:blog-tutorials && npm run seed:recalculate"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tiptap/extension-code-block-lowlight": "^3.18.0",
    "@tiptap/extension-image": "^3.18.0",
    "@tiptap/extension-link": "^3.18.0",
    "@tiptap/extension-placeholder": "^3.18.0",
    "@tiptap/react": "^3.18.0",
    "@tiptap/starter-kit": "^3.18.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "firebase": "^12.8.0",
    "firebase-admin": "^13.0.0",
    "gray-matter": "^4.0.3",
    "isomorphic-dompurify": "^2.35.0",
    "lowlight": "^3.1.0",
    "next": "16.1.6",
    "openai": "^6.17.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hot-toast": "^2.4.1",
    "sharp": "^0.34.5",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "autoprefixer": "^10.4.23",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.5.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
