rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Blog posts - public read for published, admin full access
    match /posts/{postId} {
      // Allow anyone to read published posts, admins can read all
      allow get: if resource.data.published == true || isAdmin();
      allow list: if isAdmin() || true; // Allow list queries, individual docs filtered by get rule
      allow create, delete: if isAdmin();
      // Allow admins full update, allow signed-in users to increment views/likes on published posts
      allow update: if isAdmin() ||
        (isSignedIn() && resource.data.published == true &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views', 'likes']));
    }

    // Tutorials - public read for published, admin full access
    match /tutorials/{tutorialId} {
      // Allow anyone to read published tutorials, admins can read all
      allow get: if resource.data.published == true || isAdmin();
      allow list: if isAdmin() || true; // Allow list queries, individual docs filtered by get rule
      allow create, delete: if isAdmin();
      // Allow admins full update, allow signed-in users to increment views/likes on published tutorials
      allow update: if isAdmin() ||
        (isSignedIn() && resource.data.published == true &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views', 'likes']));
    }

    // Categories - public read, admin write
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Tags - public read, admin write
    match /tags/{tagId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Comments - approved read, signed-in write, admin moderate
    match /comments/{commentId} {
      // Admins can read all, public can only read approved
      allow read: if isAdmin() || (resource != null && resource.data.approved == true);
      allow create: if isSignedIn();
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Admin users
    match /admins/{userId} {
      allow read: if isSignedIn();
      allow write: if false; // Only set via Firebase console/admin SDK
    }

    // User profiles
    match /users/{userId} {
      allow read: if true;
      allow create, update: if isOwner(userId);
      allow delete: if isAdmin();
    }

    // Analytics - admin read, public can log events
    match /analytics/{docId} {
      allow read: if isAdmin();
      allow create: if true; // Allow logging from client
      allow update, delete: if isAdmin();
    }

    // Site settings - public read, admin write
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
