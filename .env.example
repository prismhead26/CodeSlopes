# ========================================
# CodeSlopes Blog - Environment Variables
# ========================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!
# ========================================

# ========================================
# Firebase Client Configuration
# ========================================
# Get these from: https://console.firebase.google.com/project/codeslopes/settings/general
# Navigate to: Project Settings > General > Your apps > Web app
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=codeslopes.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=codeslopes
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=codeslopes.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# ========================================
# Firebase Admin SDK (Server-side only)
# ========================================
# Get these from: https://console.firebase.google.com/project/codeslopes/settings/serviceaccounts/adminsdk
# Click "Generate New Private Key" and download the JSON file
FIREBASE_ADMIN_PROJECT_ID=codeslopes
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_email@codeslopes.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# ========================================
# OpenAI API Configuration
# ========================================
# Get from: https://platform.openai.com/api-keys
# Used for AI content suggestions, summarization, and writing improvements
OPENAI_API_KEY=sk-your_openai_api_key_here

# ========================================
# Anthropic API (Optional)
# ========================================
# Get from: https://console.anthropic.com/settings/keys
# Currently not used but available for future Claude AI features
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# ========================================
# reCAPTCHA v3 Configuration (Optional)
# ========================================
# Get from: https://www.google.com/recaptcha/admin/create
# Choose reCAPTCHA v3 and add your domains
# Used for spam protection on comments and forms
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# ========================================
# Site Configuration
# ========================================
# For local development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# For production deployment, change to your domain
# NEXT_PUBLIC_SITE_URL=https://your-domain.com
